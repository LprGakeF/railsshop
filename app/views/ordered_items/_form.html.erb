<%= form_for @ordered_item, :html => { :class => "form-horizontal ordered_item" } do |f| %>

    <% if @ordered_item.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@ordered_item.errors.count, "error") %> prohibited this ordered_item from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @ordered_item.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :quantity, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :quantity, :class => 'form-control' %>
    </div>
    <%= error_span(@ordered_item[:quantity]) %>
  </div>
  <!--
  <div class="control-group">
    <%= f.label :item_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :item_id, :class => 'form-control' %>
    </div>
    <%= error_span(@ordered_item[:item_id]) %>
  </div>
  <div class="control-group">
    <%= f.label :customer_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :customer_id, :class => 'form-control' %>
    </div>-->
    <%= f.hidden_field :item_id %>
    <%= error_span(@ordered_item[:customer_id]) %>
  </div>


  <h2>Categories:</h2>
  <% for category in Category.all %>
    <div>
      <% if category.items.exists? %>
        <strong><%= category.name %></strong>
      <% end %>
    </div>
  <% end %>

  <h2>Items:</h2>
  <% for item in Item.all %>
    <div>

        <strong><%= item.name %></strong>

    </div>
  <% end %>



  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            ordered_items_path, :class => 'btn btn-default' %>

<% end %>
